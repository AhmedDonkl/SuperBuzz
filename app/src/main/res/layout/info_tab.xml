<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#3d8fb9"
            android:id="@+id/confirm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="#3d8fb9"
            android:id="@+id/confirm_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <ImageButton
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/like_info"
            android:id="@+id/add_like_place"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/confirm_text"
        android:textColor="#3d8fb9"
        android:id="@+id/report_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm_number"
        android:textColor="#3d8fb9"
        android:id="@+id/report_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_like_place"
        android:background="@drawable/dislike_info"
        android:id="@+id/add_report_place"
        android:layout_weight=".8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/desc_text"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/report_text"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        />

    <TextView
        android:id="@+id/place_description"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/desc_text"
        android:layout_marginTop="10dp"
        android:textColor="#C0C0C0"
        android:textSize="19dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blablablablablablablablalbalblablalblablabblablablblablalb"
        />






</RelativeLayout>

</ScrollView>